{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('Css/portfolio.css') }}">

{% endblock stylesheets %}

{% block body %}
<div class="container-fluid"> <!--begin container-->
    <div class="row "><!--begin row to sperate navbar elements-->
        <nav class="navbar navbar-expand-lg col-md-12  " data-bs-theme="dark"> <!--begin navbar-->
            <div class="container-fluid">
                <!--navbar elements-->
                <a class="navbar-brand fs-3 fw-bold col-5 offset-1" href="/about">About<span
                        class="text-warning">Me</span></a>
                <!--burger menu-->
                <button class="navbar-toggler btn-lg   " type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class=" navbar-toggler-icon "></span>
                </button>
                <!--other navbar elements-->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link  fw-semibold mx-3" aria-current="page" href="/">HOME</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link fw-semibold mx-3 " href="/about">ABOUT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold mx-3" href="/resume">RESUME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active fw-semibold mx-3" href="/project">PROJECTS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold mx-3" href="/contact">CONTACT</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-warning mx-xl-5 mx-lg-4 mx-3" href="/login">Admin</a>
                        </li>


                    </ul>
                </div>
            </div> <!--end row-->
        </nav> <!--end navbar-->
        <main><!--begin main contents projects-->
            <!--responsive-->
            <div style="margin-top: 4%;" class="row  ms-xl-5 ms-lg-5 ms-md-5 ms-sm-5 ms-2 ">
                <!--title-->
                <p class="fs-1 text-light fw-bold">My <span class="text-warning">Projects</span></p>
                <!--text id for responsive font size-->
                <p id="text" class=" fw-medium  col-xl-5  "
                    style="color: #9CA3AF ;font-family: Lexend Deca;font-style: normal;">
                    Discover my diverse portfolio of projects, a testament to my skills

                    creativity, and dedication across various domains, reflecting

                    my journey in innovation.
                </p>
                <div></div> <!--div to seperate elements-->


                {% for project in projects %}

                <div class="resume   col-xl-3 col-lg-3 col-md-11 col-sm-11 col-11 my-xl-5 my-lg-0 my-md-4 my-sm-4 my-3  "
                    style="height:80%">
                    <!--third project image-->
                    <img src="{{ asset('uploads/' ~ project.image) }}" class="img-fluid rounded border border-primary "
                        style="margin-left: 6%;width:90%;margin-top:2%;height:160px" alt="">


                    <p style="margin-left: 5%;" class="fs-3 fw-bold text-warning">{{project.name}} </p>

                    <span id="text" class="   fw-medium "
                        style="color: #6B7280 ;font-family: Lexend Deca;font-style: normal;">
                        {{project.description}}


                    </span>



                </div>
                <div class="col-1"></div>



                {% endfor %}
            </div>
        </main><!--end main content (projects)-->
        < </div><!--end row-->
    </div><!--end container-->

    {% endblock %}