{% extends "base.html.twig" %}

{% block stylesheets %}

<link rel="stylesheet" href="{{ asset('Css/contact.css') }}">
{% endblock stylesheets %}

{% block body %}
<!--check if the user is authenticated to display content-->
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<!--navbar-->
<nav class="navbar navbar-expand-lg " data-bs-theme="dark"> <!--begin navbar-->
    <div class="container-fluid">
        <!--navbar elements-->

        <a class="navbar-brand fs-2 fw-bold col-5 offset-1" href="/about">About<span class="text-warning">Me</span></a>
        <!--burger menu-->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!--other elements-->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ">
                <li class="nav-item">
                    <a class="nav-link  fw-semibold mx-3" aria-current="page" href="/addskill">SKILLS</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link fw-semibold mx-3" href="/addproject">PROJECTS</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-warning mx-xl-5 mx-lg-5 mx-3   " href="/">HOME</a>
                </li>

                <li class="nav-item">
                    <a class="btn btn-outline-danger mx-xl-5 mx-lg-5 mx-3 my-xl-0 my-lg-0 my-2"
                        href="/logout">LOGOUT</a>
                </li>


            </ul>
        </div>
    </div> <!--end row-->
</nav> <!--end navbar-->
<!-- skill content-->
<div class="text-light offset-xl-3 offset-lg-2 offset-2 my-5 col-xl-5 col-lg-7 col-sm-8 col-md-9 col-10 ">
    <!--begin skill form-->
    <p class="fs-2">Edit skill</p>
    {{form_start(form) }}

    <div class="mb-3 ">
        {{ form_label(form.name) }}
        {{ form_widget(form.name, {'attr': {'class': 'name form-control text-light fw-bold border-0', 'style':
        'background:
        #1F2937; width:70% ' }}) }}
        {{form_errors(form.name)}}
    </div>

    <div class="mb-3">
        {{ form_label(form.mastery) }}
        {{ form_widget(form.mastery, {'attr': {'class': 'name form-control text-light fw-bold border-0', 'style':
        'background: #1F2937; width:70%' }}) }}
        {{form_errors(form.mastery)}}
    </div>
    <button class="btn btn-outline-warning" type="submit">Modify</button>

    {{ form_end(form) }}
    <!--end skill form-->
    <br>





</div>
<!--if user is not authenticated-->

{% else %}
<p class="fs-2 text-warning offset-3 my-5">You need to login for this content</p>
<a href="/login" class="btn btn-warning">Login</a>
{% endif %}
{% endblock body %}