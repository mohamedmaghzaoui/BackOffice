{% extends "base.html.twig" %}

{% block stylesheets %}

<link rel="stylesheet" href="{{ asset('Css/contact.css') }}">
{% endblock stylesheets %}

{% block body %}
<!--check if the user is authenticated to display content-->
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<!--navbar-->
<nav class="navbar navbar-expand-lg " data-bs-theme="dark"> <!--begin navbar-->
    <div class="container-fluid">
        <!--navbar elements-->

        <a class="navbar-brand fs-2 fw-bold col-5 offset-1" href="/about">About<span class="text-warning">Me</span></a>
        <!--burger menu-->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!--other elements-->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ">
                <li class="nav-item">
                    <a class="nav-link  fw-semibold mx-3" aria-current="page" href="/addskill">SKILLS</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link fw-semibold mx-3" href="/addproject">PROJECTS</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-warning mx-5" href="/">HOME</a>
                </li>

                <li class="nav-item">
                    <a class="btn btn-outline-danger mx-5" href="/logout">LOGOUT</a>
                </li>


            </ul>
        </div>
    </div> <!--end row-->
</nav> <!--end navbar-->
<!-- skill content-->
<div class="text-light offset-xl-3 offset-1 my-5 col-xl-5 col-lg-5 col-sm-8 col-md-9 col-10 ">
    <!--begin skill form-->
    <p class="fs-2">Add a new project</p>
    {{form_start(form,{"attr":{"novalidate":"novalidate"}}) }}

    <div class="mb-3 ">
        {{ form_label(form.name) }}
        {{ form_widget(form.name, {'attr': {'class': 'name form-control text-light fw-bold border-0', 'style':
        'background:
        #1F2937; width:70% ' }}) }}
        {{form_errors(form.name)}}
    </div>

    <div class="mb-3">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'name form-control text-light fw-bold border-0', 'style':
        'background: #1F2937; width:70%' }}) }}
        {{form_errors(form.description)}}
    </div>
    <div class="mb-3">
        {{ form_label(form.image) }}
        {{ form_widget(form.image, {'attr': {'class': 'name form-control text-light fw-bold border-0', 'style':
        'background: #1F2937; width:70%' }}) }}
        {{form_errors(form.image)}}
    </div>

    <button class="btn btn-outline-warning" type="submit">Add a project</button>

    {{ form_end(form) }}
    <!--end project form-->
    <br>
    <!--begin project list-->
    <table style="background-color: #111827; border-radius: 12px;" class=" fw-medium text-light col-12">

        <thead>
            <tr>
                <th class="px-xl-3 " scope="col">Name</th>

                <th class="px-xl-5 px-3 " scope="col">Image</th>
                <th class="px-xl-5 px-3 " scope="col">Option</th>
            </tr>
        </thead>
        <tbody>
            {% for project in projects %}
            <tr>
                <td class="px-xl-3">{{ project.name }}</td>

                <td class="px-xl-5  "> <img class="img-fluid" src="{{ asset('uploads/' ~ project.image) }}"
                        alt="{{ project.name }} image">
                </td>
                <td class="px-2">
                    <a href="" class=" btn btn-outline-primary my-2
                        w-100">modify</a>
                    <a href="{{ path('delete_project', {'id': project.id}) }}"
                        class="btn btn-outline-danger my-2 w-100">delete</a>

                </td>



            </tr>
            <tr>
                <td colspan=" 4">
                    <hr>
                </td>
            </tr>

            {% endfor %}
        </tbody>
    </table>
    <!--end project form-->




</div>
<!--if user is not authenticated-->

{% else %}
<p class="fs-2 text-warning offset-3 my-5">You need to login for this content</p>
<a href="/login" class="btn btn-warning">Login</a>
{% endif %}
{% endblock body %}